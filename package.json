{
  "name": "openstore",
  "version": "0.315.1-changelog.0",
  "description": "Plugins and libraries for building a lightning fast ecommerce in JAMStack",
  "main": "index.js",
  "repository": "git@github.com:vtex/faststore.git",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna clean && lerna run clean",
    "format": "prettier --write \"packages/**/*.{ts,js,tsx,jsx,json}\"",
    "lint": "eslint packages/ --ext .js,.ts,.jsx,.tsx",
    "npm:publish": "lerna publish from-package -y",
    "npm:publish:alpha": "lerna publish from-package -y --dist-tag next",
    "bootstrap": "lerna bootstrap",
    "release": "yarn release:stable",
    "release:stable": "yarn release-it --only-version",
    "release:alpha": "yarn release-it -c .release-it.alpha.json --only-version --preRelease=alpha",
    "lerna:version": "lerna version ${npm_package_version} --amend --no-git-tag-version --yes"
  },
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@vtex/prettier-config": "^0.3.5",
    "eslint": "^7.15.0",
    "eslint-config-vtex": "^14.0.0",
    "eslint-config-vtex-react": "^8.0.0",
    "husky": "^4.3.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "prettier": "^2.2.1",
    "typescript": "^4.1.2",
    "@release-it/bumper": "^2.0.0",
    "@release-it/keep-a-changelog": "^2.2.2",
    "release-it": "^14.4.1"
  },
  "resolutions": {
    "@typescript-eslint/eslint-plugin": "^4",
    "@typescript-eslint/parser": "^4"
  },
  "dependencies": {}
}
